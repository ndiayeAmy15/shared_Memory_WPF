<Page x:Class="WPFModernVerticalMenu.Pages.EncadreurPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFModernVerticalMenu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EncadreurPage">

    <Grid Background="#FFB9B9B9">
        <DataGrid Name="dgEncadreur" SelectionChanged="dgEncadreur_SelectionChanged" AutoGenerateColumns="False" Margin="0,0,314,268">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" />
                <DataGridTextColumn Header="Prenom" Binding="{Binding prenom}" />
                <DataGridTextColumn Header="Nom" Binding="{Binding nom}" />
                <DataGridTextColumn Header="Specialite" Binding="{Binding specialite}" />
               
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
